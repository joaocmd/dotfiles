set number relativenumber
syntax on
set showcmd
set laststatus=2
set wildmenu
set mouse=a

" Identation
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set autoindent

" Set Y to yank till line end instead of doing the same as yy
nnoremap Y y$

set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=2
